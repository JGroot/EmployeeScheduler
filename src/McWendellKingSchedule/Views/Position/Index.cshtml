@model IEnumerable<McWendellKingSchedule.Models.Position>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12">
    <h1 class="page-head-line">Positions</h1>
    <h1 class="page-subhead-line">Current active positions</h1>
</div>

<p>

    <a asp-action="Create" class="btn btn-sm btn-primary" role="button">Create New</a>

</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PositionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isActive)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.PositionName" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-sunglasses"></span> Details</a> |
                <a asp-action="Edit" asp-route-id="@item.PositionName" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-wrench"></span> Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.PositionName" class="btn-danger btn-xs"><span class="glyphicon glyphicon-minus-sign"></span>Delete</a>
            </td>
        </tr>
    }
</table>
