@model McWendellKingSchedule.Models.Schedule

@{
    ViewData["Title"] = "Create";
    ViewData["DateCreated"] = DateTime.Now.ToShortDateString();
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Schedule</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DateStart" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateEnd" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateEnd" class="form-control" />
                <span asp-validation-for="DateEnd" class="text-danger" />
            </div>
        </div>      
        <div class="form-group">
            <label asp-for="UserName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @Html.DropDownList("UserName", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DateCreated" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DateCreated" class="form-control"/>
                <span asp-validation-for="DateCreated" class="text-danger" />
            </div>
        </div>   
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
