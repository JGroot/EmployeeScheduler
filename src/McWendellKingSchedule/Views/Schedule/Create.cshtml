@model McWendellKingSchedule.Models.Schedule

@{
    ViewData["Title"] = "Create";
    ViewData["DateCreated"] = DateTime.Now.ToShortDateString();
}

<div class="col-md-10"><h2>Create a New Schedule</h2></div>
<div style="margin-bottom:10px">
<div class="col-md-10">
    <a asp-action="Index" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-backward"></span>Back to List</a>
</div>
    </div>
<div class="col-md-4 col-sm-8 col-xs-8">
    <div class="panel panel-primary">
        <div class="panel panel-heading">Schedule</div>
        <div class="panel-body">
            <form asp-action="Create">
                <div class="form-horizontal">
                    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DateStart"></label>
                        <input asp-for="DateStart" class="form-control" />
                        <span asp-validation-for="DateStart" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DateEnd"></label>
                        <input asp-for="DateEnd" class="form-control" />
                        <span asp-validation-for="DateEnd" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        @Html.DropDownList("UserName", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label asp-for="DateCreated"></label>
                        <input asp-for="DateCreated" class="form-control" />
                        <span asp-validation-for="DateCreated" class="text-danger" />
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
