@model IEnumerable<McWendellKingSchedule.Models.Schedule>

@{
    ViewData["Title"] = "Index";
}

<div class="col-md-12">
    <h1 class="page-head-line">Schedules</h1>
    <h1 class="page-subhead-line">Click on 'Create New' to create a new schedule.</h1>
</div>

<p class="col-md-10">
    <a asp-action="Create" class="btn btn-sm btn-primary">Create New</a>
</p>
<div class="col-md-12 col-sm-10 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DateStart)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateEnd)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateCreated)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateStart)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateEnd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateCreated)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ScheduleID" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-sunglasses"></span> Details</a> 
                                <a asp-action="Edit" asp-route-id="@item.ScheduleID" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-wrench"></span> Edit</a> 
                                <a asp-action="Delete" asp-route-id="@item.ScheduleID" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-minus-sign"></span>Delete</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
