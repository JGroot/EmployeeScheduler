@model McWendellKingSchedule.Models.Shift

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Shift</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ShiftName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShiftName" class="form-control" />
                <span asp-validation-for="ShiftName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShiftDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShiftDescription" class="form-control" />
                <span asp-validation-for="ShiftDescription" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShiftStart" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShiftStart" class="form-control" />
                <span asp-validation-for="ShiftStart" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ShiftEnd" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ShiftEnd" class="form-control" />
                <span asp-validation-for="ShiftEnd" class="text-danger" />
            </div>
        </div>       
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="isActive" />
                    <label asp-for="isActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
